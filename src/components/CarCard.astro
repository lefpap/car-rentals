---
import type { Car } from '../lib/supabase';

interface Props {
  car: Car
}

const { car } = Astro.props;
---

<div class="bg-white rounded-xl shadow-lg overflow-hidden transform transition-all duration-300 hover:scale-[1.02] hover:shadow-xl">
  <div class="relative">
    <img src={car.image} alt={`${car.name} ${car.model}`} class="w-full h-56 object-cover" />
    <div class="absolute top-4 right-4">
      <span class={`px-3 py-1 rounded-full text-sm font-medium ${
        car.available 
          ? 'bg-green-100 text-green-800' 
          : 'bg-red-100 text-red-800'
      }`}>
        {car.available ? 'Available' : 'Booked'}
      </span>
    </div>
  </div>
  
  <div class="p-6">
    <div class="flex justify-between items-start mb-4">
      <div>
        <h3 class="text-xl font-bold text-gray-900">{car.name}</h3>
        <p class="text-gray-600">{car.model} â€¢ {car.year}</p>
      </div>
      <div class="text-right">
        <p class="text-2xl font-bold text-orange-500">${car.price}</p>
        <p class="text-sm text-gray-500">per day</p>
      </div>
    </div>
    
    <div class="space-y-4">
      <div class="flex items-center text-gray-600">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
        </svg>
        <span>Free Pickup</span>
      </div>
      
      <div class="flex items-center text-gray-600">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
        </svg>
        <span>Flexible Booking</span>
      </div>
    </div>
    
    {car.available && (
      <a
        href={`/cars/${car.id}`}
        class="mt-6 w-full inline-flex justify-center items-center bg-orange-500 text-white px-6 py-3 rounded-lg hover:bg-orange-600 transition-colors font-medium"
      >
        Book Now
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </a>
    )}
  </div>
</div> 