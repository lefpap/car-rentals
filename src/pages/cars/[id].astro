---
import Layout from "../../layouts/Layout.astro";
import { dummyCars } from "../../lib/dummyData";
const { id } = Astro.params;
const car = dummyCars.find((c) => c.id === id) ?? dummyCars[0];
---

<Layout title={car.name}>
  <a
    href="/cars"
    class="inline-block mb-6 text-[var(--color-primary)] hover:underline"
    >← Back to Cars</a
  >
  <div class="flex flex-col md:flex-row gap-10">
    <img
      src={car.image}
      alt={car.name}
      class="w-full md:w-1/2 rounded-2xl shadow-lg object-cover h-72 md:h-auto"
    />
    <div class="flex-1">
      <h1 class="text-3xl font-bold text-[var(--color-secondary)] mb-2">
        {car.name}
      </h1>
      <p class="text-lg text-gray-600 mb-2">{car.model} • {car.year}</p>
      <p class="text-2xl font-bold text-[var(--color-primary)] mb-4">
        ${car.price}<span class="text-sm text-gray-500">/day</span>
      </p>
      <form class="bg-gray-50 p-6 rounded-2xl shadow space-y-4 max-w-md">
        <h2 class="text-xl font-semibold mb-2">Book This Car</h2>
        <div>
          <label class="block text-gray-700 mb-1">Start Date</label>
          <input
            type="date"
            class="w-full border border-gray-300 rounded px-3 py-2"
            required
          />
        </div>
        <div>
          <label class="block text-gray-700 mb-1">End Date</label>
          <input
            type="date"
            class="w-full border border-gray-300 rounded px-3 py-2"
            required
          />
        </div>
        <div>
          <label class="block text-gray-700 mb-1">Name</label>
          <input
            type="text"
            class="w-full border border-gray-300 rounded px-3 py-2"
            required
          />
        </div>
        <div>
          <label class="block text-gray-700 mb-1">Email</label>
          <input
            type="email"
            class="w-full border border-gray-300 rounded px-3 py-2"
            required
          />
        </div>
        <button
          type="submit"
          class="w-full bg-[var(--color-primary)] text-white py-3 rounded-full font-semibold hover:bg-[var(--color-primary-dark)] transition-colors"
          >Book Now</button
        >
      </form>
    </div>
  </div>
</Layout>

