---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact Us">
  <section class="text-center mb-16 container mx-auto">
    <h1 class="text-4xl font-bold text-[var(--color-secondary)] mb-4">Contact Us</h1>
    <p class="text-lg text-gray-600 max-w-2xl mx-auto">We'd love to hear from you! Fill out the form or find our contact details below.</p>
  </section>
  <div class="grid md:grid-cols-2 gap-5 items-stretch mb-16">
    <form class="bg-white p-10 rounded-3xl shadow-lg space-y-7 border border-gray-100 flex flex-col justify-between h-full">
      <div>
        <label class="block text-gray-700 mb-2 font-medium">Name</label>
        <input type="text" class="w-full border border-gray-300 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-[var(--color-primary)] transition" required />
      </div>
      <div>
        <label class="block text-gray-700 mb-2 font-medium">Email</label>
        <input type="email" class="w-full border border-gray-300 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-[var(--color-primary)] transition" required />
      </div>
      <div>
        <label class="block text-gray-700 mb-2 font-medium">Message</label>
        <textarea class="w-full border border-gray-300 rounded-lg px-4 py-3 focus:outline-none focus:ring-2 focus:ring-[var(--color-primary)] transition" rows="6" required></textarea>
      </div>
      <button type="submit" class="w-full bg-[var(--color-primary)] text-white py-3 rounded-full font-semibold text-lg shadow hover:bg-[var(--color-primary-dark)] transition-colors focus:outline-none focus:ring-2 focus:ring-[var(--color-primary)] mt-2">Send Message</button>
    </form>
    <div class="bg-white rounded-3xl shadow-lg border border-gray-100 overflow-hidden flex h-full">
      <iframe
        src="https://www.openstreetmap.org/export/embed.html?bbox=13.404954%2C52.520008%2C13.404954%2C52.520008&amp;layer=mapnik"
        class="w-full h-full min-h-[400px] md:min-h-0"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"
      ></iframe>
    </div>
  </div>
  <section class="mb-16">
    <h2 class="text-2xl font-bold text-[var(--color-secondary)] mb-8 text-center">Contact Information</h2>
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-8">
      <div class="bg-gray-50 p-8 rounded-2xl shadow flex flex-col items-center text-center">
        <div class="bg-[var(--color-primary)]/10 text-[var(--color-primary)] rounded-full p-4 mb-4">
          <svg class="w-7 h-7" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M16 12a4 4 0 01-8 0V8a4 4 0 018 0v4z" /><path stroke-linecap="round" stroke-linejoin="round" d="M12 16v2m0 4h.01" /></svg>
        </div>
        <h3 class="text-lg font-semibold mb-2">Email</h3>
        <p class="text-gray-700">info@carrentals.com</p>
      </div>
      <div class="bg-gray-50 p-8 rounded-2xl shadow flex flex-col items-center text-center">
        <div class="bg-[var(--color-primary)]/10 text-[var(--color-primary)] rounded-full p-4 mb-4">
          <svg class="w-7 h-7" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H5a2 2 0 01-2-2V5zm0 10a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H5a2 2 0 01-2-2v-2zm10-10a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V5zm0 10a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" /></svg>
        </div>
        <h3 class="text-lg font-semibold mb-2">Phone</h3>
        <p class="text-gray-700">(555) 123-4567</p>
      </div>
      <div class="bg-gray-50 p-8 rounded-2xl shadow flex flex-col items-center text-center">
        <div class="bg-[var(--color-primary)]/10 text-[var(--color-primary)] rounded-full p-4 mb-4">
          <svg class="w-7 h-7" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 12.414a2 2 0 00-2.828 0l-4.243 4.243a8 8 0 1111.314 0z" /><path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
        </div>
        <h3 class="text-lg font-semibold mb-2">Address</h3>
        <p class="text-gray-700">123 Car Street, Auto City</p>
      </div>
    </div>
  </section>
</Layout> 